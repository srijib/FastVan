<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/padding"
    android:clickable="true"
    >
<LinearLayout
    android:padding="0dp"
    android:addStatesFromChildren="true"
    android:id="@+id/llCallUs"
    android:layout_marginTop="@dimen/top_margin"
    android:background="@drawable/fastvan_button_pressed"
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/ibCallUs"
        android:background="@android:color/transparent"
        android:src="@drawable/callus_selector"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:padding="0dp"
        android:addStatesFromChildren="true"
        android:id="@+id/llSmsUs"
        android:layout_marginTop="@dimen/top_margin"
        android:background="@drawable/fastvan_button_pressed"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ibSmsUs"
            android:background="@android:color/transparent"
            android:src="@drawable/smsus_selector"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
    <LinearLayout
        android:padding="0dp"
        android:addStatesFromChildren="true"
        android:id="@+id/llMailUs"
        android:layout_marginTop="@dimen/top_margin"
        android:background="@drawable/fastvan_button_pressed"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ibMailUs"
            android:background="@android:color/transparent"
            android:src="@drawable/mailus_selector"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
</LinearLayout>