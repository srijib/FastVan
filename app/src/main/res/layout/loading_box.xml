<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dlgProgress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent">


    <com.fast.van.loadingindicator.ProgressWheel
        android:visibility="gone"
        android:id="@+id/progress_wheel"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        wheel:matProg_barColor="@color/white"
        wheel:matProg_fillRadius="true"
        wheel:matProg_progressIndeterminate="false"></com.fast.van.loadingindicator.ProgressWheel>

    <ImageView
        android:id="@+id/fastvanloading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"


        />
    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fastvanloading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="LOADING..."
        android:textColor="@color/white"
        android:textSize="@dimen/dialog_textview_textsize" />

</RelativeLayout>